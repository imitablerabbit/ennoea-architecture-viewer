    <span class="regex-highlight keyword">public</span> <span class="regex-highlight keyword">int</span> <span class="regex-highlight function">factorial</span>(<span class="regex-highlight keyword">int</span> num) {
        <span class="regex-highlight keyword">if</span> (num &lt; <span class="regex-highlight number">2</span>)
